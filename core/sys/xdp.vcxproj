<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(SolutionDir)xdp.props" />
  <ItemGroup>
    <ClCompile Include="bind.c" />
    <ClCompile Include="dispatch.c" />
    <ClCompile Include="extensionset.c" />
    <ClCompile Include="program.c" />
    <ClCompile Include="queue.c" />
    <ClCompile Include="redirect.c" />
    <ClCompile Include="ring.c" />
    <ClCompile Include="rx.c" />
    <ClCompile Include="tx.c" />
    <ClCompile Include="xsk.c" />
  </ItemGroup>
  <ItemGroup>
    <ClInclude Include="precomp.h" />
  </ItemGroup>
  <ItemGroup>
    <FilesToPackage Include="$(TargetPath)" />
  </ItemGroup>
  <Target Name="SetSourceRevisionId" BeforeTargets="ClCompile;ResourceCompile">
    <Exec
      Command="git describe --long --always --dirty --exclude=* --abbrev=8"
      ConsoleToMSBuild="True"
      IgnoreExitCode="False"
      >
      <Output PropertyName="SourceRevisionId" TaskParameter="ConsoleOutput"/>
    </Exec>
    <ItemGroup>
      <ResourceCompile>
        <PreprocessorDefinitions>
          XDP_COMMIT_VERSION=$(SourceRevisionId);
          %(PreprocessorDefinitions)
        </PreprocessorDefinitions>
      </ResourceCompile>
      <ClCompile>
        <PreprocessorDefinitions>
          XDP_COMMIT_VERSION=$(SourceRevisionId);
          %(PreprocessorDefinitions)
        </PreprocessorDefinitions>
      </ClCompile>
    </ItemGroup>
  </Target>
  <ItemGroup>
    <ResourceCompile Include="xdp.rc">
      <AdditionalIncludeDirectories>
          $(SolutionDir)published\private;
          %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
      <PreprocessorDefinitions>
        XDP_MAJOR_VERSION=$(XdpMajorVersion);
        XDP_MINOR_VERSION=$(XdpMinorVersion);
        XDP_PATCH_VERSION=$(XdpPatchVersion);
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
      <PreprocessorDefinitions Condition="'$(BUILD_BUILDID)' != ''">
        XDP_BUILD_VERSION=$(BUILD_BUILDID);
        XDP_BUILD_TYPE=official;
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
      <PreprocessorDefinitions Condition="'$(BUILD_BUILDID)' == ''">
        XDP_BUILD_TYPE=private;
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
    </ResourceCompile>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(SolutionDir)lib\nmr\nmr.vcxproj">
      <Project>{f389859e-1d0c-4f30-baec-6a5e44b8190e}</Project>
    </ProjectReference>
    <ProjectReference Include="$(SolutionDir)lib\pollshim\pollshim.vcxproj">
      <Project>{4a54653b-b380-4187-890b-7451f835b07a}</Project>
    </ProjectReference>
    <ProjectReference Include="$(SolutionDir)lib\rtl\rtl.vcxproj">
      <Project>{043c2162-639f-4fc8-b72c-f7c1bacb9db3}</Project>
    </ProjectReference>
    <ProjectReference Include="$(SolutionDir)lwf\lwf.vcxproj">
      <Project>{63591dcb-0bbc-441c-a8a2-f882ee6a7d5c}</Project>
    </ProjectReference>
  </ItemGroup>
  <PropertyGroup Label="Globals">
    <ProjectGuid>{de26c8c2-f986-47c7-8e36-8a7cac1358ee}</ProjectGuid>
    <TemplateGuid>{1bc93793-694f-48fe-9372-81e2b05556fd}</TemplateGuid>
    <TargetFrameworkVersion>v4.5</TargetFrameworkVersion>
    <MinimumVisualStudioVersion>12.0</MinimumVisualStudioVersion>
  </PropertyGroup>
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.Default.props" />
  <PropertyGroup Label="Configuration">
    <TargetVersion>Windows10</TargetVersion>
    <PlatformToolset>WindowsKernelModeDriver10.0</PlatformToolset>
    <ConfigurationType>Driver</ConfigurationType>
    <DriverType>KMDF</DriverType>
    <DriverTargetPlatform>Universal</DriverTargetPlatform>
  </PropertyGroup>
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.props" />
  <Import Project="$(SolutionDir)xdp.cpp.props" />
  <Import Project="$(SolutionDir)xdp.cpp.kernel.props" />
  <ImportGroup Label="ExtensionSettings" />
  <ImportGroup Label="PropertySheets">
    <Import Project="$(UserRootDir)\Microsoft.Cpp.$(Platform).user.props" Condition="exists('$(UserRootDir)\Microsoft.Cpp.$(Platform).user.props')" Label="LocalAppDataPlatform" />
  </ImportGroup>
  <PropertyGroup Label="UserMacros" />
  <PropertyGroup>
    <OutDir>$(SolutionDir)artifacts\bin\$(Platform)_$(Configuration)\</OutDir>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        inc;
        $(SolutionDir)lib\pollshim\inc;
        $(SolutionDir)lib\rtl\inc;
        $(SolutionDir)lwf\inc;
        $(SolutionDir)published\private;
        $(IntDir);
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
      <PreprocessorDefinitions>
        NDIS_WDM=1;
        NDIS684=1;
        XDP_MAJOR_VERSION=$(XdpMajorVersion);
        XDP_MINOR_VERSION=$(XdpMinorVersion);
        XDP_PATCH_VERSION=$(XdpPatchVersion);
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
      <PreprocessorDefinitions Condition="'$(BUILD_BUILDID)' != ''">
        XDP_BUILD_VERSION=$(BUILD_BUILDID);
        XDP_BUILD_TYPE=official;
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
      <PreprocessorDefinitions Condition="'$(BUILD_BUILDID)' == ''">
        XDP_BUILD_TYPE=private;
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
      <WppEnabled>true</WppEnabled>
      <WppScanConfigurationData>$(SolutionDir)core\sys\inc\xdptrace.h</WppScanConfigurationData>
      <WppRecorderEnabled>true</WppRecorderEnabled>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemGroup>
    <Inf Include="xdp.inx">
      <CatalogFileName>xdp.cat</CatalogFileName>
      <TimeStamp>$(XdpMajorVersion).$(XdpMinorVersion).$(XdpPatchVersion).0</TimeStamp>
      <SpecifyDriverDirectiveVersion>true</SpecifyDriverDirectiveVersion>
    </Inf>
  </ItemGroup>
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />
  <ImportGroup Label="ExtensionTargets" />
</Project>
